{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://b4e89e65-6cc1-4878-857a-938e7934b66f.up.railway.app/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/static/(.*)",
      "dest": "client/build/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "client/build/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "client/build/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html"
    }
  ]
} 